[
  {
    "context": "Workspace",
    "bindings": {
      // toggle docks
      "alt-q": "workspace::ToggleLeftDock",
      "alt-e": "workspace::ToggleRightDock",
      "ctrl-`": "workspace::ToggleBottomDock",
      // new terminal (correct command is terminal::New, not workspace::NewTerminal)
      "ctrl-shift-`": "workspace::NewTerminal"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "alt-h": "vim::Left",
      "alt-j": "vim::Down",
      "alt-k": "vim::Up",
      "alt-l": "vim::Right"
    }
  }
]
